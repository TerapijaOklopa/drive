<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="0"
                android:endColor="#FF9D31FE"
                android:startColor="#FF17A6D7" />

        </shape>
    </item>
    <item
        android:bottom="@dimen/button_border_width"
        android:left="@dimen/button_border_width"
        android:right="@dimen/button_border_width"
        android:top="@dimen/button_border_width">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/toolbar_primary_background_color" />
        </shape>
    </item>

</layer-list>


<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:endColor="#FF9D31FE"
                android:startColor="#FF17A6D7" />
            <corners
                android:bottomLeftRadius="@dimen/common_corner_radius"
                android:bottomRightRadius="@dimen/common_corner_radius"
                android:topRightRadius="@dimen/common_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/button_border_width"
        android:left="@dimen/button_border_width"
        android:right="@dimen/button_border_width"
        android:top="@dimen/button_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                android:topRightRadius="16dp" />
        </shape>
    </item>
</layer-list>
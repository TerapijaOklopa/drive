<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/login_padding">

    <TextView
        android:id="@+id/welcome"
        style="@style/DriveTextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_welcome_title"
        android:textSize="@dimen/login_welcome_text_size"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/DriveTextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/login_small_pdf_padding"
        android:gravity="center"
        android:text="@string/login_small_pdf"
        android:textSize="@dimen/login_small_pdf_text_size"
        app:drawableStartCompat="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="@+id/welcome"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@id/welcome" />

    <Button
        android:id="@+id/login"
        style="@style/PostsButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="@dimen/common_activity_small_padding"
        android:paddingStart="@dimen/common_activity_padding"
        android:paddingEnd="@dimen/button_end_padding"
        android:text="@string/login_button_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>